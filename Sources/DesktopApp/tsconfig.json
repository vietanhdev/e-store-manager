{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "ES6",
    "lib": [
        "es6",
        "dom"
    ]
  },
  "include": [
    "src/controllers/**/*",
    "src/models/**/*",
    "src/views/**/*",
    "src"
  ]
}
