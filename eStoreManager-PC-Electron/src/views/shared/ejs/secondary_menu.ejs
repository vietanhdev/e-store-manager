<div id="secondary-menu" style="padding: 0.2rem; background: rgba(0,0,0,0.8)">
    <button type="button" vlink="welcome" class="btn btn-primary">Welcome Screen</button>
    <button type="button" vlink="cashier" class="btn btn-secondary">Cashier</button>
    <button type="button" vlink="bills" class="btn btn-success">Bills</button>
    <button type="button" vlink="customers" class="btn btn-danger">Customers</button>
    <button type="button" vlink="inventory" class="btn btn-warning">Inventory</button>
    <button type="button" vlink="suppliers" class="btn btn-info">Suppliers</button>
    <button type="button" vlink="import" class="btn btn-light">ImportProducts</button>
    <button type="button" vlink="finance" class="btn btn-success">Finance</button>
    <button type="button" vlink="reports" class="btn btn-dark">Reports</button>
</div>

<script>
    $(document).ready(function() {
		$("#secondary-menu button").click(function(event) {
            const {ipcRenderer} = require('electron');
            ipcRenderer.send('request_change_view', $(this).attr("vlink"));
		});
	});
</script>