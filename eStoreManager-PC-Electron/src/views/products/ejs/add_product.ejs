<%- include('../../shared/ejs/header', {title: gettext.add_product}) %>

<div class="container">
    <h3 class="text-center"><%= gettext.add_product %></h3>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="name"><%= gettext.product_name %></label>
                <input type="text" name="name" id="name" placeholder="" class="form-control">
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label for="price"><%= gettext.price %></label>
                <input type="number" name="price" id="price" placeholder="" class="form-control">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="quantity"><%= gettext.quantity %></label>
                <input type="text" name="quantity" id="quantity" placeholder="" class="form-control">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="unit"><%= gettext.unit %></label>
                <input type="text" name="unit" id="unit" placeholder="" class="form-control">
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label for="barcode"><%= gettext.barcode %></label>
                <input type="text" name="barcode" id="barcode" placeholder="" class="form-control">
            </div>
        </div>
        
        <div class="col-sm-12">
            <div class="form-group">
                <button class="btn btn-info" id="save"><%= gettext.save %></button>
            </div>
        </div>
    </div>
</div>



<script>
    const EventGetter = require("../../../services/EventGetter").EventGetter;
    const {ipcRenderer} = require('electron');

    // Handle Save Button
    $("#save").click(() => {
        let data = {}
        data.name = $("#name").val();
        data.price = $("#price").val();
        data.unit = $("#unit").val();
        data.barcode = $("#barcode").val();
        data.quantities = $("#quantity").val();
        ipcRenderer.send(EventGetter.get('add_product'), data);
    });

</script>


